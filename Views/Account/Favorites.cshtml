@model IEnumerable<fourHorsemen_Online_Video_Game_Database.Models.UserGame>

@{
    ViewData["Title"] = "Favorite Games";
}

<h2>Your Favorite Games</h2>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var userGame in Model)
        {
            <li>
                <a href="@Url.Action("Details", "Game", new { id = userGame.Game.Id })">
                    @userGame.Game.Title
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>You have no favorite games.</p>
}

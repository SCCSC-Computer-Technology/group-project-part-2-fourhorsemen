<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fourHorsemen_Online_Video_Game_Database</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fourHorsemen_Online_Video_Game_Database.styles.css" asp-append-version="true" />

    @RenderSection("Styles", false)

    <style>
        .hdrTitle {
            position: fixed;
            top: 0;
            width: 100%;
            text-align: center;
            font-family: Chiller;
            color: brown;
            font-size: 30px;
            padding: 10px 0;
            background-color: black;
            font-weight: bold;
            z-index: 1050; /* Ensure it appears above the navbar */
        }


        .navbar {
            position: fixed;
            top: 50px; /* Height of hdrTitle + some padding */
            width: 100%;
            background-color: #222;
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 10px 20px;
            z-index: 1040;
        }

        .navbar-brand {
        font-weight: bold;
        color: aliceblue !important;
        }

        .navbar-nav .nav-link {
        color: aliceblue !important;
        margin-right: 15px;
        }

        .navbar-nav .nav-link:hover {
        color: #007bff !important;
        text-decoration: underline;
        }

        body {
            padding-top: 125px; /* padding for locked header */
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #222;
            color: white;
            text-align: center;
            padding: 10px 0;
            z-index: 1000; /* ensure it stays above other elements */
        }
    </style>
</head>
<body>
    @* Step 1: Grab current controller and action *@
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <header>
        <div class="hdrTitle">
            The fourHorsemen's Video Game Database
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-center">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                        href="/Home">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(currentController == "Games" && currentAction == "SystemGamesList" ? "active" : "")"
                        href="#" id="systemsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Systems
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="systemsDropdown">
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sony_ps5">Sony PlayStation5</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sony_ps4">Sony PlayStation4</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sony_ps3">Sony PlayStation3</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sony_ps2">Sony PlayStation2</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sony_ps1">Sony PlayStation</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sony_vita">Sony Vita</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sony_psp">Sony PSP</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=ms_xbox_sx">Microsoft Xbox Series S/X</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=ms_xbox_one">Microsoft Xbox One</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=ms_xbox_360">Microsoft Xbox 360</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=ms_xbox">Microsoft Xbox</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_switch">Nintendo Switch</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_wii_u">Nintendo Wii U</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_wii">Nintendo Wii</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_gamecube">Nintendo GameCube</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_64">Nintendo 64</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=snes">Super Nintendo</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nes">Nintendo</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_3ds">Nintendo 3DS</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_ds">Nintendo DS</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_gba">Nintendo GameBoy Advance</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_gbc">Nintendo GameBoy Color</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nintendo_gb">Nintendo GameBoy</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_dreamcast">Sega Dreamcast</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_saturn">Sega Saturn</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_32x">Sega 32X</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_cd">Sega CD</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_genesis">Sega Genesis</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_master_system">Sega Master System</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_gamegear">Sega GameGear</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=atari_jaguar">Atari Jaguar</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=atari_7800">Atari 7800</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=atari_5200">Atari 5200</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=atari_2600">Atari 2600</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=atari_lynx">Atari Lynx</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=panasonic_3do">Panasonic 3DO</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=snk_neogeo">SNK Neo Geo</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "History" ? "active" : "")"
                        href="/History">History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "Facts" ? "active" : "")"
                        href="/Facts">Secret Kingdom</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Forums</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Swap Meet</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(currentController == "Account" && (currentAction == "MyInfo" || currentAction == "FavoriteGames" || currentAction == "OwnedGames" || currentAction == "WishList" || currentAction == "DefeatedGames" || currentAction == "Login" || currentAction == "Register") ? "active" : "")"
                        href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Account
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="systemsDropdown">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a class="dropdown-item" href="/Account/Login">Login</a></li>
                                <li><a class="dropdown-item" href="/Account/Register">Sign Up</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" href="/Account/MyInfo">My Info</a></li>
                                <li><a class="dropdown-item" href="/Account/Favorites">Favorite Games</a></li>
                                <li><a class="dropdown-item" href="/Account/OwnedGames">Owned Games</a></li>
                                <li><a class="dropdown-item" href="/Account/WishList">Wish List</a></li>
                                <li><a class="dropdown-item" href="/Account/DefeatedGames">Defeated Games</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                            }                           
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center align-items-center">
            <span class="me-1">&copy; 2025 - fourHorsemen_Online_Video_Game_Database:</span>
            <a asp-area="" asp-controller="Home" asp-action="About" class="mx-1">About Us</a> -
            <a asp-area="" asp-controller="Home" asp-action="Contact" class="mx-1">Contact Us</a> -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="mx-1">Privacy</a> -
            <a asp-area="" asp-controller="Home" asp-action="Admin" class="mx-1">Admin</a>
        </div>
    </footer>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model fourHorsemen_Online_Video_Game_Database.ViewModels.MyInfoViewModel




<div class="container mt-4">
    <h2>My Profile</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">

            <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "/Images/default-avatar.jpg" : Model.AvatarUrl)" alt="Avatar" class="img-thumbnail" style="width: 150px; height: 150px;" />

            <form asp-action="UploadAvatar" asp-controller="Account" enctype="multipart/form-data" method="post" id="avatarForm">
                <input type="file" name="avatarFile" id="avatarFileInput" style="display: none;" onchange="document.getElementById('avatarForm').submit();" />
            </form>

            <a href="#" onclick="document.getElementById('avatarFileInput').click(); return false;">Change Avatar</a><br />
            <p><strong>Username:</strong> @Model.Username</p>
            <p>
                <a asp-action="ChangeUsername" class="btn btn-link">Change Username</a>
            </p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Join Date:</strong> @Model.JoinDate?.ToString("MMMM dd, yyyy")</p>
        </div>
        <div class="col-md-6">
            <h4>My Games</h4>
            <p><strong>Favorites:</strong> @Model.FavoritesCount</p>
            <p><strong>Owned:</strong> @Model.OwnedCount</p>
            <p><strong>Wishlist:</strong> @Model.WishlistCount</p>
            <p><strong>Defeated:</strong> @Model.DefeatedCount</p>
        </div>
    </div>
</div>

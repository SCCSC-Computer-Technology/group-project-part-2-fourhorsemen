@model fourHorsemen_Online_Video_Game_Database.ViewModels.MyInfoViewModel

@{
    ViewData["Title"] = "My Profile";
}

<h2>@ViewData["Title"]</h2>

<div class="card" style="width: 30rem; margin-top: 20px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Username</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Email</h6>
        <p class="card-text">
            <strong>Member Since:</strong> @Model.JoinDate?.ToString("MMMM dd, yyyy")
        </p>
        <a href="/Account/EditProfile" class="btn btn-primary">Edit Profile</a>
    </div>
</div>

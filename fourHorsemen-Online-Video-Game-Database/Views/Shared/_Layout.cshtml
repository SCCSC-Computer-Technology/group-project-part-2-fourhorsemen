<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fourHorsemen_Online_Video_Game_Database</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fourHorsemen_Online_Video_Game_Database.styles.css" asp-append-version="true" />

    @RenderSection("Styles", false)

    <style>
        .hdrTitle {
            position: fixed;
            top: 0;
            width: 100%;
            text-align: center;
            font-family: Chiller;
            color: brown;
            font-size: 30px;
            padding: 10px 0;
            background-color: black;
            font-weight: bold;
            z-index: 1050; /* Ensure it appears above the navbar */
        }


        .navbar {
            position: fixed;
            top: 50px; /* Height of hdrTitle + some padding */
            width: 100%;
            background-color: #222;
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 10px 20px;
            z-index: 1040;
        }

        .navbar-brand {
        font-weight: bold;
        color: aliceblue !important;
        }

        .navbar-nav .nav-link {
        color: aliceblue !important;
        margin-right: 15px;
        }

        .navbar-nav .nav-link:hover {
        color: #007bff !important;
        text-decoration: underline;
        }

        body {
            padding-top: 125px; /* padding for locked header */
        }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-left: 0.1rem;
            margin-right: 0.1rem;
        }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #222;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
            padding: 10px 0;
            z-index: 1000; /* ensure it stays above other elements */
        }
    </style>
</head>
<body>
    @* Step 1: Grab current controller and action *@
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <header>
        <div class="hdrTitle">
            The fourHorsemen's Video Game Database
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-center">
                <ul class="nav nav-tabs">

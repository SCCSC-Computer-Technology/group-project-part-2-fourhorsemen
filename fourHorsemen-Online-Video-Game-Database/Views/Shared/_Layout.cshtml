                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Swap Meet</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(currentController == "Account" && (currentAction == "MyInfo" || currentAction == "FavoriteGames" || currentAction == "OwnedGames" || currentAction == "WishList" || currentAction == "DefeatedGames" || currentAction == "Login" || currentAction == "Register") ? "active" : "")"
                        href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Account
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="systemsDropdown">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li><a class="dropdown-item" href="/Account/Login">Login</a></li>
                                <li><a class="dropdown-item" href="/Account/Register">Sign Up</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="MyInfo">My Info</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Favorites">Favorite Games</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="OwnedGames">Owned Games</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="WishList">Wish List</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="DefeatedGames">Defeated Games</a></li>

                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                            }                           
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center align-items-center">
            <span class="me-1">&copy; 2025 - fourHorsemen_Online_Video_Game_Database:</span>
            <a asp-area="" asp-controller="Home" asp-action="About" class="mx-1">About Us</a> -
            <a asp-area="" asp-controller="Home" asp-action="Contact" class="mx-1">Contact Us</a> -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="mx-1">Privacy</a> -
            <a asp-area="" asp-controller="Home" asp-action="Admin" class="mx-1">Admin</a>
        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Enable hover or click for nested dropdowns
            document.querySelectorAll('.dropdown-submenu .dropdown-toggle').forEach(function (element) {
                element.addEventListener('click', function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    let nextDropdown = this.nextElementSibling;

                    // Close other open submenus
                    document.querySelectorAll('.dropdown-submenu .dropdown-menu').forEach(function (submenu) {
                        if (submenu !== nextDropdown) {
                            submenu.classList.remove('show');
                        }
                    });

                    if (nextDropdown) {
                        nextDropdown.classList.toggle('show');
                    }
                });
            });

            // Close submenu if clicking outside
            document.addEventListener('click', function (e) {
                document.querySelectorAll('.dropdown-submenu .dropdown-menu').forEach(function (submenu) {
                    submenu.classList.remove('show');
                });
            });
        });
    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fourHorsemen_Online_Video_Game_Database</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fourHorsemen_Online_Video_Game_Database.styles.css" asp-append-version="true" />

    @RenderSection("Styles", false)

    <style>
        .hdrTitle {
            text-align: center;
            font-family: Chiller;
            color: brown;
            font-size: 30px;
            padding: 10px 0;
            background-color: black;
            font-weight: bold;
        }

        .navbar {
            background-color: #555555;
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 10px 20px;
        }

        .navbar-brand {
            font-weight: bold;
            color: aliceblue !important;
        }

        .navbar-nav .nav-link {
            color: aliceblue !important;
            margin-right: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff !important;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    @* Step 1: Grab current controller and action *@
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <header>
        <div class="hdrTitle">
            The fourHorsemen's Video Game Database
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")"
                           href="/Home">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle @(currentController == "Games" && currentAction == "SystemGamesList" ? "active" : "")"
                           href="#" id="systemsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Systems
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="systemsDropdown">
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=nes">Nintendo</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=snes">Super Nintendo</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_master_system">Sega Master System</a></li>
                            <li><a class="dropdown-item" href="/Games/SystemGamesList?system=sega_genesis">Sega Genesis</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(currentController == "Home" && currentAction == "Privacy" ? "active" : "")"
                           href="/Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - fourHorsemen_Online_Video_Game_Database -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
